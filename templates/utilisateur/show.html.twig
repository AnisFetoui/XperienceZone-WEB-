    <a href="{{ path('app_utilisateur_edit', {'idUser': utilisateur.idUser}) }}" class="btn btn-outline-secondary py-3 px-4 w-full xl:w-32 mt-3 xl:mt-0 align-top">edit</a>

    {{ include('utilisateur/_delete_form.html.twig') }}
