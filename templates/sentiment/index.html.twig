{% extends 'base.html.twig' %}

{% block title %}Sentiment index{% endblock %}

{% block body %}
    <h1>Sentiment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sentiment in sentiments %}
            <tr>
                <td>{{ sentiment.id }}</td>
                <td>{{ sentiment.nom }}</td>
                <td>
                    <a href="{{ path('app_sentiment_show', {'id': sentiment.id}) }}">show</a>
                    <a href="{{ path('app_sentiment_edit', {'id': sentiment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sentiment_new') }}">Create new</a>
{% endblock %}
