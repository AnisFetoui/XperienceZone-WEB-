{% extends 'base.html.twig' %}

{% block title %}{% endblock %}
{% block container %}
	<a href="{{ path('app_activites_new') }}">Create new</a>

{% endblock %}

{% block card %}
	<div class="row">
		{% for activite in activites %}
			<div class="col-md-4 col-sm-6">
				<div class="single-explore-item">
					<div class="single-explore-img">
						<img
						src="{{ asset('uploads/images/' ~ activite.images) }}" alt="activity image">
						<!-- Other content for activite -->

						<div class="single-explore-img-info">
							<button onclick="window.location.href='#'">best rated</button>
							<div class="single-explore-image-icon-box">
								<ul>
									<li>
										<div class="single-explore-image-icon">
											<a href="{{ path('app_activites_show', {'idAct': activite.idAct}) }}">
												<i class="fa fa-arrows-alt"></i>
											</a>

										</div>
									</li>
									<li>
										<div class="single-explore-image-icon">
											<i class="fa fa-bookmark-o"></i>
										</div>
									</li>
								</ul>
							</div>
						</div>

					</div>
					<div class="single-explore-txt bg-theme-1">
						<h2>
							<a href="#">{{ activite.nomAct }}</a>
						</h2>
						<!-- Other content for activite -->
						<p class="explore-rating-price">
							<span class="explore-rating">5.0</span>
							<a href="#">
								{{ activite.lieuAct }}</a>

							<span class="explore-price-box">
								Price
								<span class="explore-price">{{ activite.prixAct }}</span>
							</span>
							<a href="#">{{ activite.organisateur }}</a>
						</p>

						<div class="explore-person">
							<div class="row">
								<div class="col-sm-10">
									<p>
										{{ activite.description }}...
									</p>
								</div>
							</div>
						</div>

						<div class="explore-open-close-part">
							<div class="row">
								<div class="col-sm-5">
									<a href="{{ path('abonner_activite', {'id': activite.idAct}) }}">Abonner</a>
								</div>
								<div class="col-sm-7">
									<div class="explore-map-icon">
										<a href="#">
											<i data-feather="map-pin"></i>
										</a>
										<a href="#">
											<i data-feather="upload"></i>
										</a>
										<a href="#">
											<i data-feather="heart"></i>
										</a>
									</div>
								</div>
							</div>
						</div>


					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
